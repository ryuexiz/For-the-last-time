<body>
  <div class="wrap" role="main">
    <div class="title">Sebuah Pesan — Selamat Lulus</div>
    <div class="sub">Tap tombol di bawah untuk mulai</div>

    <button id="startBtn" class="start-btn">Mulai ▸</button>
    <div class="bubble" id="bubble"></div>
    <div class="credit">Created with care.</div>
  </div>

  <audio id="bgm" src="someone_to_stay.ogg" preload="auto"></audio>

  <script>
    const lines = [
      "Selamat atas kelulusanmu...",
      "Hari ini adalah awal baru buatmu.",
      "Aku tahu siapa kamu, aku peduli...",
      "Tapi aku memilih diam.",
      "Bukan karena tak peduli, tetapi karena aku tahu kita punya jalan masing-masing.",
      "In my own quiet way, I love you.",
      "Terima kasih sudah menjadi bagian dari perjalananku, walau hanya sebentar.",
      "Mungkin ini terakhir kali aku melihatmu.",
      "Setelah ini, kita akan berjalan di jalan kita masing-masing.",
      "Semoga kau menemukan kebahagiaanmu, di tempat yang mungkin tak lagi ada aku."
    ];

    const bubble = document.getElementById('bubble');
    const bgm = document.getElementById('bgm');
    const startBtn = document.getElementById('startBtn');

    function typeLine(text, charDelay=40) {
      return new Promise(resolve => {
        let idx = 0;
        const node = document.createElement('div');
        bubble.appendChild(node);
        node.textContent = "";
        function step(){
          if(idx < text.length){
            node.textContent += text[idx++];
            bubble.scrollTop = bubble.scrollHeight;
            setTimeout(step, charDelay);
          } else {
            setTimeout(resolve, 600);
          }
        }
        step();
      });
    }

    async function startSequence() {
      startBtn.style.display = 'none';
      try { await bgm.play(); } catch(e) { console.warn("Audio error:", e); }
      for(let i=0;i<lines.length;i++){
        const delay = (i===5) ? 70 : 40;
        await typeLine(lines[i], delay);
      }
    }

    startBtn.addEventListener('click', startSequence);
  </script>
</body>
</html>
